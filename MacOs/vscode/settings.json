{
    "workbench.colorTheme": "Ros√© Pine",
    "workbench.sideBar.location": "right",
    "editor.fontFamily": "'0x Proto Nerd', 'Cascadia Code','Cascadia Code PL', Monaco, 'Courier New', monospace",
    "editor.tabSize": 3,
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "files.autoSave": "onFocusChange",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "files.associations": {
        "*.json": "json"
    },
    "python.analysis.extraPaths": [],
    "databricks.lastActiveConnection": "Databricks Extension",
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.leader": "<Space>",
    "vim.useCtrlKeys": true,
    "editor.lineNumbers": "relative",
    "vim.insertModeKeyBindings": [
        { "before": ["j", "k"], "after": ["<ESC>"] },
        { "before": ["k", "j"], "after": ["<ESC>"] },
        // diable arrow keys
        // { "before": ["<Up>"], "after": [] },
        // { "before": ["<Down>"], "after": [] },
        // { "before": ["<Left>"], "after": [] },
        // { "before": ["<Right>"], "after": [] }
    ],
    "vim.normalModeKeyBindings": [
        //disable arrow keys
        { "before": ["<Up>"], "after": [] },
        { "before": ["<Down>"], "after": [] },
        { "before": ["<Left>"], "after": [] },
        { "before": ["<Right>"], "after": [] },
        // remap <Esc><Esc> to command ":noh"
        { "before": ["<Esc>", "<Esc>"], "command": [":noh"] }
    ],
    "vim.visualModeKeyBindings": [
        { "before": ["<Up>"], "after": [] },
        { "before": ["<Down>"], "after": [] },
        { "before": ["<Left>"], "after": [] },
        { "before": ["<Right>"], "after": [] }
    ],
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "github.copilot.nextEditSuggestions.enabled": true,

}